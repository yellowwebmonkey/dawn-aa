{% if section.settings.keep_aspect == false %}
{%- assign size = section.settings.image_size_choice | replace: "x", "" -%}
{%- assign img_style = 'object-fit: cover;width:' | append: size |append: 'px;height:' | append: size | append: 'px;' -%}
{% elsif section.settings.stretch_images == true %}
{%- assign size = section.settings.image_size_choice -%}
{%- assign img_style = 'width:' | append: size | replace: 'x','px;' -%}
{% else %}
{%- assign size = section.settings.image_size_choice -%}
{%- assign img_style = '' -%}
{% endif %}


